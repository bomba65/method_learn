<% if @task.errors.any? %>
  <ul>
  <% @task.errors.full_messages.each do |m| %>
    <li><%= m %></li>
  <% end %>
  </ul>
<% end %>

<%= form_for @task do |f| %>
  <%= f.label "Невидимый код" %><br>
  <%= f.text_area :invisible_code %>
  <%= f.text_field :answer %>
  <%= f.submit "Edit" %>
<% end %>
