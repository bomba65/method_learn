
<div class="container-fluid">
    <div class="row program">
      <div class="partners col-xs-12 col-md-12">
        <div class="logo">
          <%=image_tag "lion.png", width:"80px", height:"75px" %>
        </div>
        <div class="text">
          <center><p class="text1"><%= message1 %></p></center>
          <center><p class="text2"><%= message2 %></p></center>
        </div>

        <div class="level-panel">
          <h3 id="level"></h3>
        </div>
        <div class="progress-background" >
          <div class="progress-content"  id="energy">

          </div>
        </div>

        <input type="hidden" name="" id="energy-value" value="<%= ProcessOfLesson.where(user_to_course_id: UserToCourse.where(user_id: current_user)).sum(:point) %>">




      </div>
    </div>
</div>

   <script type="text/javascript">
    var global_value = $("#energy-value").val();
    var level = parseInt(global_value/100);
    energy = global_value%100;
    $("#level").html(level);
    $("#energy").animate({width: energy+"%"},500);
   </script>
