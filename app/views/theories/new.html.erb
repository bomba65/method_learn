
  <div class="add-new">
    <%= form_for @theory do |s| %>
    <div class="sub_category_creating">
      <%= s.label :Контент %><br>
      <%= s.text_area :content %>
    </div>
    <div class="sub_category_creating videomrg">
      <%= s.label :"Код с YouTube на видео" %><br>
      https://www.youtube.com/watch?v=<%= s.text_field :video, placeholder: "ID of your youtube video" %>
    </div>
    <div class="sub_category_creating">
      <%= s.hidden_field :lesson_id, :value => params[:lesson_id] %>
    </div>
    <div class="sub_category_creating">
      <%= s.submit "Create Theory", class: "btn btn-default"%>
    </div>
    <% end %>
  </div>
  

