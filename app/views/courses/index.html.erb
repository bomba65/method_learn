<% provide :title, "Courses" %>

<div class="container-fluid main">
      <div class="row">
        <div class="coursesx lefted">
            <% @courses.each do |course| %>
              <div class="item end">
                <div class="top">
                  <% if current_user.following?(params[:id]) %>
                    <%= link_to "Unfollow", relationships_path(user_id: params[:id]), method: :delete, class: "btn btn-default" %>
                  <% else %>
                    <%= link_to "Follow", relationships_path(user_id: params[:id]), method: :post, class: "btn btn-default" %>
                  <% end %>
                </div>
                <div class="middle">
                  <h4><%= link_to course.name, course, class:"course-name" %></h4>
                </div>
                <div class="border"></div>
                <div class="desc">
                  <p><%=course.subtitle%></p>
                </div>
                <div class="bottomblue bottombluex">
                  <div class="raiting">
                    <%= image_tag("Star-filled.png")%>
                    <%= image_tag("Star-filled.png")%>
                    <%= image_tag("Star-filled.png")%>
                    <%= image_tag("Star-filled.png")%>
                    <%= image_tag("Star-unfilled.png")%>
                  </div>
                </div>

              </div>
            <% end %>
        </div>
      </div>
    </div>
</div>
