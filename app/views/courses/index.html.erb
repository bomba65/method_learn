                        <hr>

                        <p class="description"><%= course.description %></p>

                        <div class="col-xs-8 col-md-4 green">
                            <p>100%</p>
                            <span class="glyphicon glyphicon-ok ok" aria-hidden="true"></span>
                        </div>
                    </div>
                <% end %>
            </div>

     </div>
